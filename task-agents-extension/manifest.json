{
  "manifest_version": 3,
  "name": "Task Agents",
  "description": "Claude Code エージェント実行支援ツール",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "nativeMessaging"
  ],
  "host_permissions": [
    "file:///*"
  ],
  "action": {
    "default_title": "Task Agents"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}